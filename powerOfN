class Solution(object):
    def isPowerOfThree(self, n):
        """
        :type n: int
        :rtype: bool
        """
        
        if n == 1:
            return True
        
        while n>0:
            if n==3:
                return True
            if n%3!=0:
                return False
            n=n/3
            
        return False
